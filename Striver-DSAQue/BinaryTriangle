#include <bits/stdc++.h>
using namespace std;

void nBinaryTriangle(int n) {
    // Write your code here.
    for(int i=1;i<=n;i++){
        for(int j=1;j<=i;j++){
            if((i+j)%2==0){
                cout<<"1 ";
            }
            else{
                cout<<"0 ";
            }
        }
        cout<<endl;
    }
}


int main()
{

Binary_number_traingle(5);
    
    return 0;

}
