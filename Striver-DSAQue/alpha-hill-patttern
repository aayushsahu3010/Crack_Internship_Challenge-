#include <bits/stdc++.h>
using namespace std;



void Alpha_Hill_Pattern(int n)
{
    /*  a
        a b a
       a b c b a
      a b c d c b a
    */
    for (int i = 0; i < n; i++)
    {
        for (int space = 0; space < n - i - 1; space++)
        {
            cout << " ";
        }
        char c = 'A';
        for (int j = 0; j <= i; j++)
        {
            cout << c << " ";
            c++;
        }
        c='A';
        for (int j = i; j >=1; j--)
        {
            cout<<c<<" ";
            c=c+j-1;
            // cout << char('A' + j - 1) << " ";
        }

        cout << endl;
    }
}

int main()
{
    Alpha_Hill_Pattern(5);
    numberCrownPattern(3);
    // Binary_number_traingle(5);

    return 0;
}
