#include<bits/stdc++.h>
using namespace std;


void mountain_pattern(int n ){
     for(int i =0;i<n;i++){
        for(int j=0;j<n-i-1;j++){
            cout<<" ";
        }
        for(int k=0;k<2*i+1;k++){
            cout<<"*";
        }
        cout<<endl;
     }

}

void Reverse_mountain(int n ){
    for(int i = 0;i<n;i++){
        for(int j=0;j<i;j++){
            cout<<" ";
        }
        for(int k=0;k<2*(n-i)-1;k++){
            cout<<"*";
        }
        cout<<endl;
    }
}

int main(){
 mountain_pattern(5);
 Reverse_mountain(5);
 return 0;

}
