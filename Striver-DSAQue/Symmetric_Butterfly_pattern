
#include <bits/stdc++.h>
using namespace std;

void Butterfly_pattern(int n){
    for(int i=0;i<n;i++){
        for(int j=0;j<=i;j++){
            cout<<"* ";
        }
        for(int space =0;space<2*(n-i-1);space++){
            cout<<" ";
        }
        
        for(int j=0;j<=i;j++){
            cout<<"* ";
        }
        cout<<endl;
    }
    for(int i=0;i<n-1;i++){
        for(int j=0;j<n-i-1;j++){
            cout<<"* ";
        }
        for(int space =0;space<2*(i+1);space++){
            cout<<" ";
        }
        
        for(int j=0;j<n-i-1;j++){
            cout<<"* ";
        }
        cout<<endl;
    }
}




int main()
{
    
Butterfly_pattern(3);
    return 0;
}
