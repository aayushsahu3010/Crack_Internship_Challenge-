#include<iostream>
using namespace std;


void half_diamond(int n)
{

    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j <= i; j++)
        {
            cout << "*";
        }
        cout<<endl;
    }
    for (int i = n - 1; i > 0; i--)
    {
        for (int j = 0; j < i; j++)
        {
            cout << "*";
        }
        cout<<endl;
    }
}


int main(){
half_diamond(5)
return 0;
}
